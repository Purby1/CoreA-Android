<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/turquesa_claro"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/texto_NuevoUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:fontFamily="sans-serif-black"
        android:justificationMode="inter_word"
        android:paddingHorizontal="35dp"
        android:text="@string/bienvenida"
        android:textColor="@color/black"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/texto_Crear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/texto_NuevoUsuario"
        android:paddingHorizontal="20dp"
        android:text="@string/crear_cuenta"
        android:textColor="@color/black"
        android:fontFamily="sans-serif-black"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/texto_Nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="90dp"
        android:layout_below="@+id/texto_Crear"
        android:text="Nombre"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:fontFamily="sans-serif-medium"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/texto_Apellidos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/texto_Nombre"
        android:text="Apellidos"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:fontFamily="sans-serif-medium"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/texto_Numero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/texto_Apellidos"
        android:text="TelÃ©fono"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:fontFamily="sans-serif-medium"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/boton_CambioActividad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editable_Numero"
        android:layout_marginTop="60dp"
        android:layout_marginHorizontal="50dp"
        android:backgroundTint="@color/azul_turquesa"
        android:text="Siguiente"
        android:textColor="@color/black"
        android:textSize="45sp"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/editable_Nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="80dp"
        android:layout_below="@+id/texto_Crear"
        android:layout_toEndOf="@+id/texto_Nombre"
        android:hint="@string/intro_texto"
        android:inputType="text"
        android:textColor="@color/black"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/editable_Apellidos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/editable_Nombre"
        android:layout_toEndOf="@+id/texto_Apellidos"
        android:hint="@string/intro_texto"
        android:inputType="text"
        android:textColor="@color/black"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/editable_Numero"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editable_Apellidos"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_toEndOf="@+id/texto_Numero"
        android:hint="@string/intro_texto"
        android:inputType="phone"
        android:textColor="@color/black"
        android:textSize="20sp" />

</RelativeLayout>